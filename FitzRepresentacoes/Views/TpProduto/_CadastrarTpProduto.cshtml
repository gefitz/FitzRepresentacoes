@model FitzRepresentacoes.DTOs.TipoProdutoDTO;

<!-- Modal -->
<div class="modal fade @(ViewData.ModelState.IsValid ? "" : "show")" id="tpProdutoModal" tabindex="-1" aria-labelledby="tpProdutoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><strong id="TituloEditar"></strong></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formTpProduto">
                    <div class="form-horizontal">
                        <input asp-for="id" hidden />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="TpProduto" class="col-md-4 control-label" ></label>
                            <div class="col-md-10">
                                <input asp-for="TpProduto" class="form-control" id="CadastroTpProduto"/>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Descricao" class="col-md-4 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Descricao" class="form-control" id="CadastroDescricao"/>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" onclick="SalvarTipoProduto()">Salvar</button>
                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Voltar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
